<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- font-awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <!-- bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <!-- toastify -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <!-- style sheets  -->
    <link rel="stylesheet" href="/css/general.css" />
    <link rel="stylesheet" href="/css/admin/settings.css" />
    <link rel="stylesheet" href="/css/admin/nav.css" />
    <title>Admin-Settings</title>
  </head>

  <body>
    <%- include("./nav.ejs") %>
    <main data-userid="<%=user._id%>">
      <div class="container-xl px-4 mt-4">
        <nav class="nav nav-borders">
          <li><a class="nav-link active" href="#">Profile</a></li>
          <li><a class="nav-link" href="/admin/security">Security</a></li>
          <li>
            <a class="nav-link" href="/admin/notifications">Notifications</a>
          </li>
        </nav>
        <hr class="mt-0 mb-4" />
        <!-- ------------------------ -->
        <div class="row">
          <div class="col-xl-4">
            <div class="card mb-4 mb-xl-0">
              <div class="card-header">Profile Picture</div>
              <div class="card-body text-center">
                <form method="post" enctype="multipart/form-data">
                  <label for="fileToUpload">
                    <div
                      class="profile-pic"
                      style="background-image: url(<%=user.profilePic %>)"
                    ></div>
                  </label>
                  <input type="File" id="fileToUpload" />
                </form>
                <div class="small font-italic text-muted mb-4">
                  JPG or PNG no larger than 5 MB
                </div>
                <div class="button-container">
                  <button class="btn btn-primary" id="upload-new-image">
                    Upload new image
                  </button>
                </div>
              </div>
            </div>
          </div>
          <!-- ------------------------ -->
          <div class="col-xl-8">
            <div class="card mb-4">
              <div class="card-header">Account Details</div>
              <div class="card-body">
                <form id="myform">
                  <div class="row gx-3 mb-3">
                    <div class="col-md-6">
                      <label class="small mb-1" for="firstName"
                        >First name</label
                      >
                      <input
                        class="form-control"
                        id="firstName"
                        type="text"
                        value="<%= user.firstName%>"
                      />
                      <span id="errorFirstName" class="error"></span>
                    </div>
                    <div class="col-md-6">
                      <label class="small mb-1" for="lastName">Last name</label>
                      <input
                        class="form-control"
                        id="lastName"
                        type="text"
                        value="<%= user.lastName%>"
                      />
                      <span id="errorLastName" class="error"></span>
                    </div>
                  </div>
                  <div class="mb-3">
                    <label class="small mb-1" for="email">Email address</label>
                    <input
                      class="form-control"
                      id="email"
                      type="text"
                      value="<%= user.email%>"
                    />
                    <span id="errorEmail" class="error"></span>
                  </div>
                  <div class="row gx-3 mb-3">
                    <div class="col-md-6">
                      <label class="small mb-1" for="Phone">Phone number</label>
                      <input
                        class="form-control"
                        id="Phone"
                        type="tel"
                        value="<%= user.phoneNumber%>"
                      />
                    </div>
                    <div class="col-md-6">
                      <label class="small mb-1" for="inputBirthday"
                        >Birthday</label
                      >
                      <input
                        class="form-control"
                        id="inputBirthday"
                        type="date"
                        name="birthday"
                        value="<%= user.birthdayDate%>"
                      />
                    </div>
                  </div>
                  <div class="btns">
                    <button class="btn btn-primary" id="saveBtn" type="submit">
                      Save changes
                    </button>
                    <button class="btn clear_btn" type="button">Clear</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <!-- image upload  -->
    <script>
      document
        .getElementById("upload-new-image")
        .addEventListener("click", async (e) => {
          e.preventDefault();

          try {
            const res = await fetch("/admin/changeimage", {
              method: "PUT",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({}),
            });
            const data = await res.json();

          } catch (err) {
            console.log(err);
          }
        });
    </script>
    <!-- form validation and update data  -->
    <script>
      const firstName = document.getElementById("firstName");
      const errorFirstName = document.getElementById("errorFirstName");

      const lastName = document.getElementById("lastName");
      const errorLastName = document.getElementById("errorLastName");

      const email = document.getElementById("email");
      const errorEmail = document.getElementById("errorEmail");

      const inputBirthday = document.getElementById("inputBirthday");

      let foundAnError;

      function getFieldName(input) {
        let value = input.id;
        return value.replace(/([a-z])([A-Z])/g, "$1 $2").toLowerCase();
      }

      function showError(input, message) {
        foundAnError = true;
        const span = input.parentElement.querySelector("span");
        input.style.border = "1px solid red";
        span.innerText = message;
      }

      function showSucces(input) {
        input.style.border = "1px solid green";
        const span = (input.parentElement.querySelector("span").innerText = "");
      }

      function checkRequired(inputArr) {
        inputArr.forEach(function (input) {
          if (input.value.trim() === "")
            showError(input, `${getFieldName(input)} is required`);
          else showSucces(input);
        });
      }

      async function checkEmail(input) {
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(input.value.trim()))
          showError(input, "Email is invalid");
        else {
          try {
            const res = await fetch("/admin/checkemail", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({
                owner: document.getElementsByTagName("main")[0].dataset.userid,
                email: document.getElementById("email").value,
              }),
            });
            const data = await res.json();
            console.log(data);
            if (data.errMsg) showError(input, "email is taken");
            else showSucces(input);
          } catch (err) {
            console.log(err);
          }
        }
      }

      document
        .getElementById("saveBtn")
        .addEventListener("click", async (e) => {
          e.preventDefault();
          foundAnError = false;
          checkRequired([email, firstName, lastName]);
          if (!foundAnError) {
            await checkEmail(email);
          }

          if (!foundAnError) {
            try {
              const res = await fetch("/admin/settings", {
                method: "PUT",
                headers: {
                  "Content-Type": "application/json",
                },
                body: JSON.stringify({
                  email: document.getElementById("email").value,
                  firstName: document.getElementById("firstName").value,
                  lastName: document.getElementById("lastName").value,
                  phoneNumber: document.getElementById("Phone").value,
                  birthdayDate: document.getElementById("inputBirthday").value,
                }),
              });

              const data = await res.json();
              if (data.msg) {
                Toastify({
                  text: "Updated Successfully",
                  duration: 3000,
                  gravity: "top",
                  close: false,
                  backgroundColor: "green",
                }).showToast();
              }
            } catch (err) {
              console.log(err);
            }
          }
        });
    </script>
  </body>
</html>
