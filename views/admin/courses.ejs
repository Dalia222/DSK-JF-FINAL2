<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/css/general.css" />
    <link rel="stylesheet" href="/css/admin/nav.css" />
    <link rel="stylesheet" href="/css/admin/courses.css" />

    <title>Admin-Courses</title>
  </head>
  <body>
    <%- include("./nav.ejs") %>
    <main>
      <header>
        <h1>Avilable Courses</h1>
        <button class="new-user" id="newUserBtn" type="button">
          + New Course
        </button>
      </header>
      <section class="add-new-student" id="addNewStudent">
        <p style="color: red" id="error"></p>
        <form method="post" id="form" action="/admin/users">
          <div>
            <label for="Course's Name">Course's Name : </label>
            <input
              id="courseName"
              type="text"
              class="field"
              name="courseName"
              placeholder="Course's Name"
            />
          </div>
          <div>
            <label for="Number of students">Number of students: </label>
            <input
              id="numofStudents"
              type="number"
              class="field"
              name="numberofStudnt"
              placeholder="Number of students"
            />
          </div>
          <div>
            <label for="username">Instructor's name :</label>
            <select
              id="InstructorName"
              class="field selectt"
              name="InstructorName"
              placeholder="Instructor's Name"
            >
              <% if (instructors){ %> <% instructors.forEach(instructor => { %>
              <option data-instructorId="<%= instructor._id %>">
                <%= instructor.firstName %>
              </option>
              <% })} %>
              <option data-instructorId="NULL">No Instructor</option>
            </select>
          </div>

          <div>
            <button class="btn" id="submit">Add</button>
          </div>
        </form>
      </section>

      <section class="articles">
        <article>
          <div class="image">
            <img src="/img/Web.jpeg" alt="" />
          </div>

          <div class="article-body">
            <h2>Web Development</h2>
          </div>
        </article>
      </section>
    </main>
  </body>
</html>
<script type="module">
  const menu = document.getElementById("addNewStudent");
  const newUserBtn = document.getElementById("newUserBtn");

  newUserBtn.addEventListener("click", () => {
    menu.classList.toggle("active");
  });

  document.addEventListener("dblclick", function (e) {
    if (
      menu.classList.contains("active") &&
      !menu.contains(e.target) &&
      !newUserBtn.contains(e.target)
    ) {
      menu.classList.remove("active");
      document.getElementById("form").reset();
    }
  });

  // << Start >> form Validation
  import { validateForm } from "../js/formValidation.js";
  const form = document.getElementById("form");
  const error = document.getElementById("error");
  form.addEventListener("submit", async (e) => {
    e.preventDefault();
    if (validateForm(form)) error.innerHTML = validateForm(form);
    else {
      try {
        const res = await fetch("/admin/courses", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({
            title: document.getElementById("courseName").value,
            numberOfStudents: document.getElementById("numofStudents").value,
            instructorId:
              document.getElementById("InstructorName").options[
                document.getElementById("InstructorName").selectedIndex
              ].dataset.instructorid,
          }),
        });
        const data = await res.json();
        if (data.msg) error.innerHTML = "added";
      } catch (err) {
        console.log(err);
      }
    }
  });
  // << End >> form Validation
</script>
