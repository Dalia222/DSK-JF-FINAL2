<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/student/course.css">
    <link rel="stylesheet" href="/css/student/home.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" />

    <script src="https://kit.fontawesome.com/0b0cd0c012.js" crossorigin="anonymous"></script>
    <title>All Courses</title>
</head>

<body>
    <%- include("./nav.ejs") %>
        <section>
            <% if (courses.length) {%>
                <% courses.forEach(course=> { %>
                    <section class="services-card">
                        <span class="container">
                            <h3>
                                <%=course.title%>
                            </h3>
                            <p>
                                <%=course.Instructor %>
                            </p>
                            <img src="<%=course.coverPic%>" width="10%" />
                            <p>Enrolled studens:<%=course.numberOfStudents %>
                            </p>
                            <p>
                                <%=course.description%>
                            </p>
                        </span>
                    </section>
                    <%}); %>
        </section>
        <% } else { %>
            <div class="no-data">
                <p>No data found!</p>
            </div>
            <% } %>
</body>

</html>